<body>
  <div class="container">
    <h2>Percentage Calculator</h2>

    <label for="calcType">Select Calculation:</label>
    <select id="calcType" onchange="updateFields()">
      <option value="1">Find % of a Number</option>
      <option value="2">Find What % One Number is of Another</option>
      <option value="3">Find Number from %</option>
    </select>

    <div id="inputs"></div>

    <button onclick="calculate()">Calculate</button>

    <div class="result" id="result">--</div>
  </div>

  <script>
    function updateFields() {
      const type = document.getElementById("calcType").value;
      const inputsDiv = document.getElementById("inputs");
      let html = "";

      if (type == "1") {
        html = `
          <label>Percentage (%)</label>
          <input type="number" id="percent" placeholder="Enter percentage">
          <label>Number</label>
          <input type="number" id="number" placeholder="Enter number">
        `;
      } else if (type == "2") {
        html = `
          <label>Part Value</label>
          <input type="number" id="part" placeholder="Enter part value">
          <label>Total Value</label>
          <input type="number" id="total" placeholder="Enter total value">
        `;
      } else {
        html = `
          <label>Percentage (%)</label>
          <input type="number" id="percent" placeholder="Enter percentage">
          <label>Part Value</label>
          <input type="number" id="part" placeholder="Enter part value">
        `;
      }
      inputsDiv.innerHTML = html;
    }

    function calculate() {
      const type = document.getElementById("calcType").value;
      let result = "";

      if (type == "1") {
        let percent = parseFloat(document.getElementById("percent").value);
        let number = parseFloat(document.getElementById("number").value);
        if (!isNaN(percent) && !isNaN(number)) {
          result = (percent / 100) * number;
          result = result.toFixed(2);
        } else {
          result = "Invalid input";
        }

      } else if (type == "2") {
        let part = parseFloat(document.getElementById("part").value);
        let total = parseFloat(document.getElementById("total").value);
        if (!isNaN(part) && !isNaN(total) && total != 0) {
          result = (part / total) * 100;
          result = result.toFixed(2) + "%";
        } else {
          result = "Invalid input";
        }

      } else {
        let percent = parseFloat(document.getElementById("percent").value);
        let part = parseFloat(document.getElementById("part").value);
        if (!isNaN(percent) && !isNaN(part) && percent != 0) {
          result = (part * 100) / percent;
          result = result.toFixed(2);
        } else {
          result = "Invalid input";
        }
      }

      document.getElementById("result").innerText = result;
    }

    // Load default input fields
    updateFields();
  </script>
</body>
</html>
